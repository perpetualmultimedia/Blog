  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
        <h2>
          <%= @article.title %>
        </h2>

        <p>
          <%= @article.text.html_safe %>
        </p>
          <div class="container-fluid comments">
            <div class="row">
              <% @article.comments.any? do %>

                  <div class="col-md-6 ">
                    <h3>Comments</h3>
                    <%= render @article.comments %>
                  </div>

              <% end %>
            <div class="col-md-6">
              <h3>Add a comment:</h3>
              <%= render 'comments/form' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
