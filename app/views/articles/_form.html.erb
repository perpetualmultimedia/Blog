<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, type: "text", class: "form-control", placeholder: "The Little Title That Could" %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, id: "blogPost", class: "form-control", rows: "5", placeholder: "That hot body..." %>
  </p>

  <p>
    <%= f.submit 'Submit Blog Entry', class: "btn-lg btn btn-block btn-info" %>
  </p>

<% end %>
